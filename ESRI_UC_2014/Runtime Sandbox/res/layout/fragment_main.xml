<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.esri.arcgis.sample.MainActivity$PlaceholderFragment" >

    <com.esri.android.map.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/map_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/map_view"
        android:layout_alignTop="@+id/map_view"
        android:visibility="invisible" />
    
    <TextView
        android:id="@+id/map_info"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:background="#99383838"
    	android:textColor="@android:color/white"
    	android:layout_alignParentTop="true"
    	android:layout_alignParentRight="true"
    	android:visibility="invisible"
    	android:padding="10dp"
    	android:textSize="18sp" />    
    

</RelativeLayout>
